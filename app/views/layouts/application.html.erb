<!DOCTYPE html>
<html>
  <head>
    <title>TodayDash</title>
    <%= csrf_meta_tags %>

    <%= render 'favicon' %>

    <link href="https://fonts.googleapis.com/css?family=Quattrocento+Sans|Vollkorn" rel="stylesheet">
    <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in %>
    <%= yield %>
  <% else %>
    <%= render "login_form" %>
    <%= render "create_form", user: @user %>
  <% end %>
  </body>
</html>
