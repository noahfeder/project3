<div class="new_user_container">
  <div class="new_user">
  <div>Make an Account</div><br>
    <%= form_for(user) do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :fname, "First Name" %>
        <%= f.text_field :fname, :class => "fname_input"  %>
      </div>

      <div class="field">
        <%= f.label :lname, "Last Name" %>
        <%= f.text_field :lname, :class => "lname_input" %>
      </div>

      <div class="field">
        <%= f.label :email, "E-mail" %>
        <%= f.text_field :email, :class => "email_input" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, :class => "password_input" %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
