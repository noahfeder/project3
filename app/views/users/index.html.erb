<div class="container">

<div class="header">
  <div class="left">
    <img src="http://placekitten.com/150/100">
  </div>
  <div class="center">
    <h1>Welcome, Username!</h1>
  </div>
  <div class="right">
  <img src="http://placekitten.com/150/100">
  </div>
</div>

<div class="content">
  <div class="twitter">
    <div class="top">
      Twitter
    </div>
    <div class="tweets">
    <%# loop through local and global trends and log each of them %>
      <div class="tweetset">
      <h2>Local Trends</h2>
      <% @local_trends.each_with_index do |tweet,index| %>
          <% if index < 10 %>

            <div class="tweet">
              <%= link_to tweet["name"], tweet["url"] %>
            </div>

          <% end %>
      <% end %>
      </div>
      <div class="tweetset">
      <h2>Global Trends</h2>
      <% @global_trends.each_with_index do |tweet,index| %>
          <% if index < 10 %>

            <div class="tweet">
              <%= link_to tweet["name"], tweet["url"] %>
            </div>

          <% end %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="news">
  </div>
  <div class="todo">
  </div>
</div>

<div class="footer">
</div>

</div>
